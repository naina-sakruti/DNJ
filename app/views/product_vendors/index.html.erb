<p id="notice"><%= notice %></p>

<h1>Product Vendors</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Vendor</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_vendors.each do |product_vendor| %>
      <tr>
        <td><%= product_vendor.product %></td>
        <td><%= product_vendor.vendor %></td>
        <td><%= product_vendor.price %></td>
        <td><%= link_to 'Show', product_vendor %></td>
        <td><%= link_to 'Edit', edit_product_vendor_path(product_vendor) %></td>
        <td><%= link_to 'Destroy', product_vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

